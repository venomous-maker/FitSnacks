<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.Theme.FitSnacks" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/fit_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/fit_green_light</item>
        <item name="colorOnPrimaryContainer">@color/fit_green_dark</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/fit_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/fit_orange_light</item>
        <item name="colorOnSecondaryContainer">@color/fit_orange_dark</item>

        <!-- Tertiary colors -->
        <item name="colorTertiary">@color/fit_teal</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/fit_teal_light</item>

        <!-- Surface colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/fit_gradient_start</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:navigationBarDividerColor">@color/muted</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Edge to edge -->
        <item name="android:enforceNavigationBarContrast">true</item>
        <item name="android:enforceStatusBarContrast">true</item>

        <!-- Typography -->
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.FitSnacks.Headline.Large</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.FitSnacks.Headline.Medium</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.FitSnacks.Title.Large</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.FitSnacks.Title.Medium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.FitSnacks.Body.Large</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.FitSnacks.Body.Medium</item>

        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.FitSnacks.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.FitSnacks.Button.Outlined</item>
        <item name="android:buttonStyle">@style/Widget.FitSnacks.Button</item>

        <!-- Card view: use Material3 built-in elevated card -->
        <item name="materialCardViewStyle">@style/Widget.Material3.CardView.Elevated</item>

        <!-- Shape appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.FitSnacks.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.FitSnacks.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.FitSnacks.Large</item>

        <!-- Elevation -->
        <item name="elevationLevel0">0dp</item>
        <item name="elevationLevel1">4dp</item>
        <item name="elevationLevel2">8dp</item>
        <item name="elevationLevel3">12dp</item>

        <!-- Custom styles -->
        <item name="cardViewStyle">@style/CardView.FitSnacks</item>
    </style>
</resources>